    </header>
    @using (Html.BeginForm("Adapo", "Home", FormMethod.Post))
    {
        <center>
            <div class="page-section">
                <div class="container">
                    <h1 class="text-center wow fadeInUp">Make an Appointment</h1>

                    <form class="main-form">
                        <div class="row mt-5 ">
                            <div class="col-12 col-sm-6 py-2 wow fadeInLeft">
                                <br />
                                <input name="PatientID" type="text" class="form-control" placeholder="Patient ID" required="required">
                            </div>
                            <div class="col-12 col-sm-6 py-2 wow fadeInLeft">
                                <br />
                                <input name="Doctor" type="text" class="form-control" placeholder="Doctor name" required="required">
                            </div>
                            <div class="col-12 col-sm-6 py-2 wow fadeInLeft" data-wow-delay="300ms">
                                <br />
                                <input name="VisitDate" type="date" class="form-control" placeholder="Visit Date" required>
                            </div>
                            <div class="col-12 col-sm-6 py-2 wow fadeInRight" data-wow-delay="300ms">
                                <br />
                                <select name="AppointmentTime" class="custom-select" required>
                                    <option value="" disabled selected>Appointment Time</option>
                                    <option value="10am-11am">10am-11am</option>
                                    <option value="11am-12pm">11am-12pm</option>
                                    <option value="4pm-5pm">4pm-5pm</option>
                                    <option value="5pm-6pm">5pm-6pm</option>
                                    <option value="6pm-7pm">6pm-7pm</option>
                                </select>
                            </div>
                            <div class="col-12 col-sm-6 py-2 wow fadeInRight">
                                <br />
                                <select name="Sepcialization" class="custom-select" required>
                                    <option value="" disabled selected>Specialization</option>
                                    <option value="General">General</option>
                                    <option value="Internal Medicine">Internal Medicine</option>
                                    <option value="Pediatrics">Pediatrics</option>
                                    <option value="Orthopedics">Orthopedics</option>
                                    <option value="Ophthalmology">Ophthalmology</option>
                                </select>
                            </div>
                        </div>
                        <input type="submit" value="submit" class="btn btn-primary mt-3 wow zoomIn"  required="required"/>
                    </form>
                </div>
            </div>

        </center>
    }
